{
  "name": "SkeletonX",
  "version": "1.0",
  "description": "生成骨架屏",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "inject/index.css"
      ],
      "js": [
        "inject/index.js"
      ]
    }
  ],
  "devtools_page": "devtools.html",
  "manifest_version": 2
}